{% extends 'base.html.twig' %}

{% block title %}Fresh ! Nouveau Frigo{% endblock %}

{% block body %}
    <div class="text-center">
        <h1 class="font-bold text-3xl">{{ user.firstname }},</h1>
        <h3 class="text-xl">Remplissez le formulaire pour ajouter une recette !</h3>
        <div class="mt-10">
            {{ form_start(form) }}
                {{ form_row(form.name) }}
            <label for="foodId">Selectionnez un aliment</label>
            {% for refrigerator in refrigerators %}
                <a href="">{{ refrigerator.name }}</a>
            {% endfor %}
            <input type="text" id="foodId" name="foodId" list="foodList">

            <datalist id="foodList">
                {% for food in foods %}
                    <option value="{{ food.name }}">
                {% endfor %}
            </datalist>
                {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>

    <div class="text-center flex justify-center mt-52">
        <a href="{{ path('app_main') }}"><button class="btn btn-info text-white"><< RETOUR</button></a>
    </div>
{% endblock %}

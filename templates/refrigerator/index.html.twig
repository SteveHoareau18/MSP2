{% extends 'base.html.twig' %}

{% block title %}Fresh ! Frigo {{ refrigerator.name }}{% endblock %}

{% block body %}
    <div class="text-center">
        <h1 class="font-bold text-3xl">{{ user.firstname }},</h1>
        <h2 class="capitalize font-bold text-2xl">Dans le frigo {{ refrigerator.name }}:</h2>
    </div>
    {% if refrigerator.foods|length == 0 %}
        <p>Il n'y a pas d'aliment !</p>
    {% else %}
        <div class="space h-5"></div>
        <h3 class="text-center bg-pink-500 text-white font-semibold text-xl rounded">Voici les aliments disponibles !</h3>
        <div class="space h-5"></div>
        <div class="ml-7 mr-7 grid grid-cols-4 gap-20">
            {% for food in refrigerator.foods %}
                <div class="flex justify-center text-center">
                    <div>
                        <div class="m-4">
                            <a class="link" href="#remove_{{ food.id }}" onclick="_remove_{{ food.id }}.showModal()">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                </svg>
                            </a>
                        </div>
                        <div class="m-4">
                            <a class="link" href="#edit_{{ food.id }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                    <div>
                        <p>{{ food.quantity }} {{ food.name }}</p>
                        <p>Ajouté le {{ food.addingDate|date('d/m/Y à H:i') }}</p>
                        <p>Expire le {{ food.expireDate|date('d/m/Y') }}</p>
                    </div>
                </div>
            {% endfor %}
    {% endif %}
    <a href="{{ path('app_refrigerator_food_add',{'number':number}) }}" class="font-semibold capitalize">
        <button class="bg-primary rounded-2xl text-white p-2">+ Ajouter un aliment</button>
    </a>
    </div>
    <div class="text-center flex justify-center mt-56">
        <a href="{{ path('app_main') }}"><button class="btn btn-info text-white"><< RETOUR</button></a>
    </div>

    {% for food in refrigerator.foods %}
        <dialog id="_remove_{{ food.id }}" class="modal">
            <div class="modal-box">
                <h3 class="font-bold text-lg">Supprimer un aliment</h3>
                <p class="py-4">Voulez-vous vraiment <b class="underline">supprimer</b> l'aliment <b class="font-bold capitalize">{{ food.name }}</b> dans <b class="font-bold capitalize">{{ refrigerator.name }}</b> ?</p>
                <div class="modal-action">
                    <form method="post" action="{{ path('app_refrigerator_food_remove',{'number':number,'id':food.id}) }}">
                        <input hidden="" name="_remove_{{ food.id }}_token" value="{{ csrf_token('_remove_food_refrigerator_token_value') }}">
                        <button class="btn btn-error">SUPPRIMER</button>
                    </form>
                    <a href="{{ path('app_refrigerator',{'number':number}) }}" class="btn btn-info text-white">FERMER</a>
                </div>
            </div>
        </dialog>
    {% endfor %}
{% endblock %}
